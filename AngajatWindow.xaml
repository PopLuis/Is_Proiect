<Window x:Class="MultiTab.AngajatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiTab"
        mc:Ignorable="d"
        Title="Fereastră Angajat" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button x:Name="AdaugaProdusButton"
                    Content="Adaugă produs/piesă"
                    Height="40"
                    Margin="0,0,0,10"
                    Click="AdaugaProdusButton_Click"/>

            <Button x:Name="VizualizareComenziServiceButton"
                    Content="Onorează cereri de service"
                    Height="40"
                    Margin="0,0,0,10"
                    Click="VizualizareComenziServiceButton_Click"/>

            <Button x:Name="VizualizareComenziNormaleButton"
                    Content="Onorează comenzi produse"
                    Height="40"
                    Click="VizualizareComenziNormaleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
